@using UmbracoProject.Services
@model GiphyDto

@if (Model != null)
{
  <div class="container my-3" role="region" aria-label="Random community GIF">
    <div class="card shadow-sm">
      <div class="card-body d-flex align-items-center gap-3">
        <img
            src="@($"{Model.Url}{(Model.Url.Contains('?') ? "&" : "?")}cb={Guid.NewGuid():N}")"
            alt="@Model.Title"
            style="max-width: 240px; height: auto;"
            loading="lazy" />

        <div>
          <h6 class="mb-1">Random GIF</h6>
          <p class="text-muted mb-0">@Model.Title</p>
          <small class="text-muted">Powered by <a href="https://giphy.com/" target="_blank" rel="noopener">GIPHY</a></small>
        </div>
      </div>
    </div>
  </div>
}
